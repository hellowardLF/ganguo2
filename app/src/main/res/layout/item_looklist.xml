<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/mylooklist_item_creat"
        android:layout_marginLeft="10dp"
        android:text="2018-01-04"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/mylooklist_item_img"
            android:src="@drawable/wechat_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/mylooklist_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mylooklist_item_nickname"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/aliyun_colorPrimaryDark" />
        <TextView
            android:id="@+id/mylooklist_item_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:text="4545454545454545454"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/mylooklist_item_lin"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f5f5f5"/>


</LinearLayout>