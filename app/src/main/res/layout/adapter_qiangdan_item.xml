<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/qiangdan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="刘先生"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/qiangdan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="12000元"
            android:textColor="#ff804f"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/qiangdan_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1-36月"
            android:textColor="#ff804f"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/qiangdan_creat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2017-11-03"
            android:textColor="#909090"
            android:textSize="15sp" />

    </LinearLayout>
    <View
        android:layout_marginRight="10dp"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="160dp">
      <LinearLayout
          android:id="@+id/qiangdan_lin1"
          android:paddingBottom="10dp"
          android:paddingTop="10dp"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:src="@drawable/icon_dingwei"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/qiangdan_address"
              android:text="哈尔滨市香坊区成......"
              android:layout_marginLeft="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/qiangdan_job"
              android:layout_marginLeft="10dp"
              android:text="文员"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/qiangdan_content"
              android:text="给父亲买电脑贷款"
              android:layout_marginLeft="10dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />


      </LinearLayout>
      <LinearLayout
          android:layout_below="@+id/qiangdan_lin1"
          android:id="@+id/qiangdan_lin2"
          android:paddingBottom="10dp"
          android:paddingTop="10dp"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:src="@drawable/icon_dingwei"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/qiangdan_year"
              android:text="1994年1月1日"
              android:layout_marginLeft="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/qiangdan_married"
              android:layout_marginLeft="10dp"
              android:text="未婚"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />


      </LinearLayout>
      <LinearLayout
          android:layout_below="@+id/qiangdan_lin2"
          android:id="@+id/qiangdan_lin3"
          android:paddingBottom="10dp"
          android:paddingTop="10dp"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:src="@drawable/icon_dingwei"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/qiangdan_education"
              android:text="大专"
              android:layout_marginLeft="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:layout_marginLeft="10dp"
              android:text="月收入"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/qiangdan_shouru"
              android:text="4000-6000"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />


      </LinearLayout>
      <LinearLayout
          android:layout_below="@+id/qiangdan_lin3"
          android:id="@+id/qiangdan_lin4"
          android:paddingBottom="10dp"
          android:paddingTop="10dp"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:src="@drawable/icon_dingwei"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/qiangdan_property"
              android:text="有公积金  有社保  无车产  无房产"
              android:layout_marginLeft="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </LinearLayout>
      <ImageView
          android:id="@+id/qiangdan_qiangdan"
          android:layout_marginBottom="10dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          android:gravity="center"
          android:textSize="20sp"
          android:text="立即抢单"
          android:background="@drawable/icon_lijiqiangdan"
          android:layout_width="100dp"
          android:layout_height="50dp" />
  </RelativeLayout>
</LinearLayout>